{
  "name": "debt-management-system",
  "version": "1.0.0",
  "description": "채무자 관리 및 강제집행 추적 시스템",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "install-client": "npm install --prefix client",
    "build": "npm run build --prefix client",
    "deploy": "npm run build && node server.js",
    "postinstall": "npm run install-client",
    "railway-build": "npm run install-client && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": ["debt", "management", "legal", "enforcement"],
  "author": "개인용",
  "license": "ISC"
} 